    @model InventariobebidaModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Inventario.css" />
    <title>Inventario</title>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="../Imagen/Picsart_24-05-23_21-20-11-938.png" alt="La Caguama Logo">
        </div>
        <a href="@Url.Action("Menu", "Menu")" class="menu-item">Men√∫</a>
        <a href="@Url.Action("Mesas", "Pedidos")" class="menu-item">Ordenes</a>
        <a href="@Url.Action("Historial", "Factura")" class="menu-item">Historial</a>
        <a href="@Url.Action("Inventario", "Inventario")" class="menu-item">Inventario</a>
        <a href="@Url.Action("Login", "Login")" class="menu-item">Salir</a>
    </div>

    <div class="main-content">
        <h2>Inventario</h2>
        <div class="category-container">
                <div class="panel with-nav-tabs panel-info">
                    <div class="panel-heading">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab1info" data-toggle="tab">Artesanales</a></li>
                            <li><a href="#tab2info" data-toggle="tab">Sin Alcohol</a></li>
                            <li><a href="#tab3info" data-toggle="tab">Importadas</a></li>
                            <li><a href="#tab4info" data-toggle="tab">Si se Fresea</a></li>
                            <li><a href="#tab5info" data-toggle="tab">Nacionales</a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab1info">
                                @if (Model.Artesanales != null && Model.Artesanales.Any())
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Artesanales)
                                            {
                                                <tr>
                                                    <td>@item.NombreBebida</td>
                                                    <td>@item.Stock</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No hay datos disponibles.</p>
                                }
                            </div>
                            <div class="tab-pane fade" id="tab2info">
                                @if (Model.SinAlcohol != null && Model.SinAlcohol.Any())
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.SinAlcohol)
                                            {
                                                <tr>
                                                    <td>@item.NombreBebida</td>
                                                    <td>@item.Stock</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No hay datos disponibles.</p>
                                }
                            </div>
                            <div class="tab-pane fade" id="tab3info">
                                @if (Model.Importadas != null && Model.Importadas.Any())
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Importadas)
                                            {
                                                <tr>
                                                    <td>@item.NombreBebida</td>
                                                    <td>@item.Stock</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No hay datos disponibles.</p>
                                }
                            </div>
                            <div class="tab-pane fade" id="tab4info">
                                @if (Model.SiseFresea != null && Model.SiseFresea.Any())
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.SiseFresea)
                                            {
                                                <tr>
                                                    <td>@item.NombreBebida</td>
                                                    <td>@item.Stock</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No hay datos disponibles.</p>
                                }
                            </div>
                            <div class="tab-pane fade" id="tab5info">
                                @if (Model.Nacionales != null && Model.Nacionales.Any())
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Nacionales)
                                            {
                                                <tr>
                                                    <td>@item.NombreBebida</td>
                                                    <td>@item.Stock</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No hay datos disponibles.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="buttons">
            <a href="@Url.Action("Index", "Home")" class="btn">Inicio</a>
            <a href="@Url.Action("Agregar", "Inventario")" class="btn">Agregar</a>
            <a href="@Url.Action("Proveedor", "Inventario")" class="btn">Contactar Proveedores</a>
        </div>
    </div>
</body>
</html>
